.list-head {
  display: flex;
  margin: 50rpx;
}
.list-head .list-head-img {
  width: 264rpx;
  height: 264rpx;
  border-radius: 30rpx;
  overflow: hidden;
  position: relative;
  margin-right: 42rpx;
}
.list-head .list-head-img image {
  width: 100%;
  height: 100%;
}
.list-head .list-head-img text {
  position: absolute;
  right: 8rpx;
  color: white;
  font-size: 26rpx;
}
.list-head .list-head-text {
  flex: 1;
  color: #f0f2f7;
}
.list-head .list-head-text .list-title {
  color: #fff;
  font-size: 34rpx;
}
.list-head .list-head-text .list-info {
  display: flex;
  margin: 20rpx 0;
  font-size: 24rpx;
  align-items: center;
}
.list-head .list-head-text .list-info image {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.list-head .list-head-text .list-description {
  line-height: 34rpx;
  font-size: 22rpx;
}
.list-share {
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  width: 330rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-radius: 37rpx;
  margin: 0 auto;
  background-color: rgba(0, 0, 0, 0.4);
}
.list-share text {
  color: #fff;
  margin-right: 16rpx;
}
.list-music {
  background-color: #fff;
  border-radius: 50rpx 50rpx 0 0;
  margin-top: 40rpx;
  overflow: hidden;
}
.list-music .list-music-head {
  display: flex;
  line-height: 50rpx;
  height: 50rpx;
  margin: 30rpx 0 70rpx 22rpx;
}
.list-music .list-music-head text:nth-child(1) {
  font-size: 50rpx;
}
.list-music .list-music-head .playAll {
  font-size: 30rpx;
  margin: 0 10rpx 0 26rpx;
}
.list-music .list-music-head .totalSongs {
  font-size: 26rpx;
  color: #b2b2b2;
}
.list-music .music-list-item {
  display: flex;
  margin: 0 32rpx 66rpx 46rpx;
  align-items: center;
  color: #959595;
}
.list-music .music-list-item .list-song-top {
  width: 58rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}
.list-music .music-list-item .list-music-song {
  flex: 1;
}
.list-music .music-list-item .list-music-song view:nth-child(2) {
  font-size: 20rpx;
  align-items: center;
}
.list-music .music-list-item .list-music-song .song-name {
  font-size: 28rpx;
  color: #000;
  width: 70vw;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list-music .music-list-item .list-music-song .song-sign {
  width: 70vw;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list-music .music-list-item .list-music-song .song-sign image {
  width: 32rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.list-music .music-list-item .play {
  font-size: 50rpx;
  color: #c7c7c7;
}

